<article>
  <div class="card-ar-list">
    {% for post in postslist | reverse %}
      <div reversed class="card-ar" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
        <span class="date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</span>
        <div class="card-ar-body">
          <a href="{{ post.url | url }}">
            <h1>{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h1>
          </a><br />
          {% for tag in post.data.tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <span class="tag">
                  <a href="{{ tagUrl | url }}">{{ tag }}</a>
                </span>
            {%- endif -%}
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</article>
